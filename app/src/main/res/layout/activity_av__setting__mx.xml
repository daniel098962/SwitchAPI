<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="user.example.hs_pc013.switchapi.AV_Setting_MX">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Setting"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp" />

    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:id="@+id/segmentST"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEDID"
        android:layout_marginLeft="36dp">

        <RadioButton
            android:id="@+id/btnST1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_left"
            android:button="@null"
            android:gravity="center"
            android:text="FHD"
            android:textColor="#c90000" />

        <RadioButton
            android:id="@+id/btnST2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style123"
            android:button="@null"
            android:gravity="center"
            android:text="OUT1"
            android:textColor="#c90000" />

        <RadioButton
            android:id="@+id/btnST3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style123"
            android:button="@null"
            android:gravity="center"
            android:text="4K30"
            android:textColor="#c90000" />

        <RadioButton
            android:id="@+id/btnST4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style123"
            android:button="@null"
            android:gravity="center"
            android:text="4K60"
            android:textColor="#c90000" />

        <RadioButton
            android:id="@+id/btnST5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_right"
            android:button="@null"
            android:gravity="center"
            android:text="720P"
            android:textColor="#c90000" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtEDID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="Video"
        android:textColor="#c90000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
